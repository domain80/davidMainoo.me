---
import Badge from '../ui/Badge.astro';

interface Props {
  title: string;
  description: string;
  year: string;
  endYear?: string;
  tags: string[];
  link?: string;
  slug: string;
}

const { title, description, year, endYear, tags, link, slug } = Astro.props;
const yearRange = endYear ? `${year} - ${endYear}` : year;
---

<article class="group space-y-4">
  <!-- Image placeholder -->
  <div class="aspect-video max-h-80 bg-gray-200 dark:bg-gray-800 rounded-lg overflow-hidden">
    <div class="w-full h-full flex items-center justify-center">
      <svg class="w-12 h-12 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  </div>

  <!-- Content -->
  <div class="space-y-3">
    <div>
      <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-1">
        {title} - {yearRange}
      </h3>

      <!-- Tech tags -->
      <div class="flex flex-wrap gap-2 mb-2">
        {tags.map(tag => (
          <Badge variant="tech">{tag}</Badge>
        ))}
      </div>
    </div>

    <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
      {description}
    </p>

    {link && (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1 text-sm text-accent hover:text-accent-dark transition-colors"
      >
        <span>Join the free waitlist today!</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
  </div>
</article>
